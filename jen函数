网络下载文件
def get_web_txt(url){
	try {
		def conn = new URL(url).openConnection()
		conn.setRequestProperty("authorization",BITBUCKET_TOKEN)
		return conn.content.text.trim()
	} catch(err){
		println "[ERROR GET ] get_web_txt 有错误：" + err.toString()
	}
}
